package com.fifthdimensionsoftware.zero.tools;

import java.io.BufferedInputStream;
import java.io.IOException;
import java.util.HashMap;

import org.newdawn.slick.openal.Audio;
import org.newdawn.slick.openal.AudioLoader;

public class AudioUtil
{
	private static HashMap<String, Audio> sounds = new HashMap<String, Audio>();
	
	public static void loadSound(String file, boolean play, boolean loop)
	{
		try {
			sounds.put(file, AudioLoader.getAudio(file.split("\\.")[file.split("\\.").length - 1].toUpperCase(), new BufferedInputStream(ZipUtil.getStreamForFile(file.split("/")[0], file.split("/")[1]))));
			if(play)
				sounds.get(file).playAsMusic(1, 1, loop);
		} catch (IOException e) {
			e.printStackTrace();
		}
	}
	
	public static void stopSound(String name)
	{
		if(sounds.containsKey(name))
		{
			sounds.get(name).stop();
			sounds.remove(name);
		}
	}
	
	public static void playSound(String name, boolean loop)
	{
		if(sounds.containsKey(name))
			sounds.get(name).playAsMusic(1, 1, loop);
	}
	
	@Deprecated
	public static void playSoundAt(String name, boolean loop, float x, float y, float z)
	{
		if(sounds.containsKey(name))
			sounds.get(name).playAsSoundEffect(1, 1, loop, x, y, z);
	}
}
