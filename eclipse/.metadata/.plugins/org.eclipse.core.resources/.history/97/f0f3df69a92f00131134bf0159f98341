package com.fifthdimensionsoftware.zero.tools;

import java.io.BufferedInputStream;
import java.io.File;
import java.io.IOException;
import java.net.URL;
import java.util.HashMap;

import org.newdawn.slick.openal.Audio;
import org.newdawn.slick.openal.AudioLoader;

public class AudioUtil
{
	private static HashMap<String, Audio> sounds = new HashMap<String, Audio>();
	
	public static void loadSound(String file, boolean play)
	{
		try {
			//sounds.put(file, AudioLoader.getAudio(file.split("\\.")[1].toUpperCase(), new BufferedInputStream(ZipUtil.getStreamForFile("res.bin", file))));
			sounds.put(file, AudioLoader.getStreamingAudio("MOD", new File("res/symphonic.mod").toURL()));
			if(play)
				sounds.get(file).playAsMusic(1, 1, false);
		} catch (IOException e) {
			e.printStackTrace();
		}
	}
}
