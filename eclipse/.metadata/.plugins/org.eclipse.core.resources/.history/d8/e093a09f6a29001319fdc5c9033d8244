package com.fifthdimensionsoftware.zero.asm;

import java.util.HashMap;

public class Processor
{
	private ProcessorMode mode = ProcessorMode.Undef;
	private HashMap<String, Register> registers = new HashMap<String, Register>();
}
class Register
{
	public int value = 0;
	public String id = "";
	public ProcessorMode mode;
	
	public Register(String id, ProcessorMode modeParam)
	{
		this.id = id;
		this.mode = modeParam;
	}
	
	public boolean canUse(ProcessorMode mode)
	{
		
	}
}
enum ProcessorMode
{
	User,
	FIQ,
	IRQ,
	Supervisor,
	Abort,
	Undef,
	System;
}
